@model Blog40.ViewModels.AuthorEditViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@*AuthorEditViewModel*@</legend>

        <div class="editor-label">
            @Html.LabelFor(x => x.Author.DisplayName)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(x => x.Author.DisplayName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Author.FirstName)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(x => x.Author.FirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Author.LastName)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(x => x.Author.LastName)
        </div>

        <input type="hidden" name="Author.AuthorId" value="@Model.Author.AuthorId" />
        <p>
            <input type="submit" value="Save" />
            @Html.HttpMethodOverride(HttpVerbs.Put)
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
