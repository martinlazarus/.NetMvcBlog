@model Blog40.ViewModels.PostEditViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Post</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@*PostEditViewModel*@</legend>
        @*title, content, author, category*@
        <div class="editor-label">
            @Html.LabelFor(x => x.Post.Title)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(x => x.Post.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Post.Content)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(x => x.Post.Content)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Authors)
        </div>

        <div class="editor-field">
            @Html.DropDownListFor(x => x.Post.Author.AuthorId, new SelectList(Model.Authors,"AuthorId", "DisplayName"))
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Categories)
        </div>

        <div class="editor-field">
            @Html.DropDownListFor(x => x.Post.Category.CategoryId, new SelectList(Model.Categories, "CategoryId", "Name"))
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
